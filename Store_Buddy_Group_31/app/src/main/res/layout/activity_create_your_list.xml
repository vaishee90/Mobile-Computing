<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_your_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bhuva.store_buddy_group_31.CreateYourList">


    <AutoCompleteTextView
        android:id="@+id/editTextProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Auto Complete Product Name">
        <requestFocus />
    </AutoCompleteTextView>




    <Button
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextQty"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginTop="31dp"
        android:id="@+id/btn_add" />

    <TextView
        android:text="Enter product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editTextProduct"
        android:layout_toStartOf="@+id/editTextProduct"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextQty"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Enter quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/editTextProduct"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/compare"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/home_button" />

    <Button
        android:text="Closest Store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_findstore"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_add"
        android:layout_toStartOf="@+id/btn_add" />

    <Button
        android:text="Compare Prices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/compare"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/home_button"
        android:layout_toStartOf="@+id/home_button" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="11dp"

        android:id="@+id/commoditylistview"
        android:layout_below="@+id/btn_add"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
