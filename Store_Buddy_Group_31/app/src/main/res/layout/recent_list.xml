<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:text="Recent List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recent_list_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:fontFamily="cursive"
        android:textSize="24sp" />

    <Button
        android:text="ADD item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recent_list_header"
        android:layout_alignLeft="@+id/recent_list_header"
        android:layout_alignStart="@+id/recent_list_header"
        android:layout_marginTop="20dp"
        android:id="@+id/add_recent" />

    <Button
        android:text="Delete Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recent_list_header"
        android:layout_alignTop="@+id/add_recent"
        android:layout_toRightOf="@+id/recent_list_header"
        android:layout_toEndOf="@+id/recent_list_header"
        android:layout_marginLeft="110dp"
        android:id="@+id/delete_recent" />

    <Button
        android:text="Delete List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recent_list_header"
        android:layout_alignTop="@+id/delete_recent"
        android:layout_toRightOf="@+id/delete_recent"
        android:layout_toEndOf="@+id/delete_recent"
        android:layout_marginLeft="245dp"
        android:id="@+id/delete_recent_list" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/add_recent"
        android:id="@+id/recent_listview" />
</RelativeLayout>